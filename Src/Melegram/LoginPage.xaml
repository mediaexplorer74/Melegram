<Page
	x:Class="TelegramClient.LoginPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:TelegramClient"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:DesignHeight="768"
	d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Background="Cyan">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Panel -->
        <StackPanel Grid.Row="0" Margin="12,17,0,28">
            <TextBlock Text="MELEGRAM" FontSize="24" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center"/>
            <TextBlock Text="ACCOUNT LOGIN" Margin="9,-7,0,0" FontSize="32" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Content Panel -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="12,0,12,0">

                <!-- Phone Number Section -->
                <TextBlock Text="ENTER YOUR PHONE NUMBER" 
                          Margin="0,20,0,10"
                          FontSize="20"
                          Foreground="Black"
                          Width="436"
                          FontWeight="Bold"/>

                <TextBox x:Name="PhoneTextBox" 
                        InputScope="TelephoneNumber" 
                        Text="+"
                        KeyDown="PhoneTextBox_KeyDown"
                        Height="91"
                        FontSize="32"/>

                <!-- Watermark for phone number -->
                <!-- Captcha Section -->
                <StackPanel x:Name="CaptchaSection" 
                           Visibility="Collapsed" 
                           Margin="0,20,0,0">

                    <TextBlock Text="SECURITY CHECK" 
                              Margin="0,0,0,10" 
                              FontSize="20"
                              Foreground="Black"
                              FontWeight="Bold"/>

                    <Border BorderBrush="Black" 
                            BorderThickness="2" 
                            Background="Transparent" 
                            Height="100"
                            Margin="0,0,0,10">
                        <Grid>
                            <Image x:Name="CaptchaImage" 
                                  Stretch="Uniform"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                            <TextBlock x:Name="CaptchaLoadingText" 
                                      Text="LOADING CAPTCHA..." 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center" 
                                      Foreground="Black"
                                      FontSize="18"
                                      FontWeight="Bold"/>
                        </Grid>
                    </Border>

                    <TextBox x:Name="CaptchaTextBox" 
                            InputScope="Text" 
                            Margin="0,0,0,10" 
                            Height="72"
                            FontSize="32"
                            KeyDown="CaptchaTextBox_KeyDown"/>

                    <!-- Watermark for captcha -->
                    <TextBlock Text="ENTER THE TEXT YOU SEE ABOVE" 
                              Margin="12,-40,0,0" 
                              Foreground="Black" 
                              FontSize="14"
                              IsHitTestVisible="False"/>

                    <Button Content="REFRESH CAPTCHA" 
                           Click="RefreshCaptchaClicked" 
                           Margin="0,0,0,10" 
                           Background="White"
                           Foreground="Black"
                           BorderThickness="0"
                           FontSize="18"
                           FontWeight="Bold"/>
                </StackPanel>

                <!-- SMS Code Section -->
                <StackPanel x:Name="CodeSection" 
                           Visibility="Collapsed" 
                           Margin="0,20,0,0">

                    <TextBlock x:Name="CodeLabel" 
                              Text="SMS VERIFICATION CODE" 
                              Margin="0,0,0,10" 
                              FontSize="20"
                              Foreground="Black"
                              FontWeight="Bold"/>

                    <TextBox x:Name="CodeTextBox" 
                            InputScope="Number" 
                            Height="72"
                            FontSize="32"
                            KeyDown="CodeTextBox_KeyDown"/>

                    <!-- Watermark for code -->
                    <TextBlock Text="ENTER THE 5-DIGIT CODE FROM SMS" 
                              Margin="12,-40,0,0" 
                              Foreground="Black" 
                              FontSize="14"
                              IsHitTestVisible="False"/>
                </StackPanel>
                <!-- Action Buttons -->
                <Button x:Name="LoginButton" 
                       Content="SEND CODE" 
                       Click="LoginButton_Click" 
                       Margin="0,30,0,10" 
                       Background="Lime"
                       Foreground="Black"
                       Height="81"
                       FontSize="24"
                       FontWeight="Bold"/>

                <Button x:Name="VerifyButton" 
                       Content="VERIFY CODE" 
                       Click="VerifyClicked" 
                       Margin="0,30,0,10" 
                       Background="Lime"
                       Foreground="Black"
                       Height="72"
                       FontSize="24"
                       FontWeight="Bold"
                       Visibility="Collapsed"/>

                <!-- Status Display -->
                <Border Background="Black" 
                        Margin="0,20,0,0" 
                        Padding="12">

                    <TextBlock x:Name="StatusText" 
                              Text="ENTER YOUR PHONE NUMBER TO START" 
                              TextWrapping="Wrap" 
                              FontSize="14"
                              Foreground="White"
                              FontWeight="Bold"/>
                </Border>

                <!-- Debug Button -->
                <Button Content="DEBUG INFO" 
                       Click="DebugButton_Click" 
                       Margin="0,30,0,10" 
                       Background="Yellow" 
                       Foreground="Black"
                       BorderThickness="1"
                       BorderBrush="Black"
                       Height="70"
                       FontSize="18"
                       FontWeight="Bold"/>

                <TextBlock x:Name="DebugText" 
                          Text="" 
                          TextWrapping="Wrap" 
                          FontSize="12"
                          Margin="0,0,0,20"
                          Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>