<Page
    x:Class="TelegramClient.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TelegramClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="696"
    d:DesignWidth="480">

    <!-- Converters for UI -->
    <Page.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <Grid x:Name="LayoutRoot" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <!-- Search Panel -->
        <Grid x:Name="SearchPanel" VerticalAlignment="Top" Background="{ThemeResource AppBarBackgroundThemeBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBox x:Name="SearchBox" 
                    Grid.Row="0"
                    TextChanged="SearchBox_TextChanged"
                    Margin="12,8"/>

            <TextBlock x:Name="SearchResultsText" 
                      Grid.Row="1"
                      Text=""
                      Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"
                      FontSize="12"
                      Margin="12,0,12,8"
                      Visibility="Collapsed"/>
        </Grid>

        <!-- Pivot Control for Swipeable Tabs -->
        <Pivot x:Name="MainPivot" Title="MELEGRAM" Margin="0,60,0,0" Foreground="{ThemeResource SystemControlPageTextBaseHighBrush}">

            <!-- Chats Pivot Item -->
            <PivotItem Header="chats" Foreground="{ThemeResource SystemControlPageTextBaseHighBrush}">
                <Grid>
                    <!-- Loading State -->
                    <Grid x:Name="ChatsLoadingPanel" Visibility="Visible">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="0,0,0,20"/>
                            <TextBlock Text="Loading chats..." 
                                       HorizontalAlignment="Center" 
                                       Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"
                                       FontSize="16"/>
                        </StackPanel>
                    </Grid>

                    <!-- Chats List -->
                    <ListBox x:Name="ChatsListBox" 
                             SelectionChanged="ChatSelected"
                             Visibility="Collapsed">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="12,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Chat Icon with Image Support -->
                                    <Grid Grid.Column="0" Width="60" Height="60" Margin="0,0,12,0">
                                        <!-- Chat Image Icon -->
                                        <Image Source="{Binding ChatIcon}" 
                                               Stretch="UniformToFill"
                                               Visibility="{Binding HasChatIcon, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                        <!-- Fallback Text Icon -->
                                        <Border Background="{Binding IconColor}"
                                                CornerRadius="30"
                                                Visibility="{Binding HasChatIcon, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}">
                                            <TextBlock Text="{Binding IconText}"
                                                       Foreground="White"
                                                       FontSize="24"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       FontWeight="Bold"/>
                                        </Border>
                                    </Grid>

                                    <!-- Chat Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Title}" 
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="{Binding ForegroundColor}"/>
                                        <TextBlock Text="{Binding LastMessage}" 
                                                   Foreground="{Binding SubtleTextColor}" 
                                                   TextWrapping="Wrap"
                                                   FontSize="14"
                                                   TextTrimming="WordEllipsis"
                                                   MaxHeight="40"/>
                                    </StackPanel>

                                    <!-- Time, Status and Unread Count -->
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding Time}" 
                                                   Foreground="{Binding SubtleTextColor}"
                                                   FontSize="12"
                                                   HorizontalAlignment="Right"/>

                                        <!-- Message Status Indicator -->
                                        <TextBlock Text="{Binding StatusIcon}" 
                                                   Foreground="{Binding StatusColor}" 
                                                   FontSize="12"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,2,0,0"/>

                                        <!-- Unread Count Badge -->
                                        <Border Background="{Binding AccentColor}" 
                                                CornerRadius="10"
                                                MinWidth="20"
                                                Height="20"
                                                HorizontalAlignment="Right"
                                                Margin="0,4,0,0"
                                                Visibility="{Binding UnreadVisibility}">
                                            <TextBlock Text="{Binding UnreadCount}" 
                                                       Foreground="White"
                                                       FontSize="12"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Margin="4,0,4,0"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Empty State -->
                    <TextBlock x:Name="ChatsEmptyText" 
                               Text="No chats yet"
                               Visibility="Collapsed"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"
                               FontSize="18"/>
                </Grid>
            </PivotItem>

            <!-- Contacts Pivot Item -->
            <PivotItem Header="contacts" Foreground="{ThemeResource SystemControlPageTextBaseHighBrush}">
                <Grid>
                    <!-- Loading State -->
                    <Grid x:Name="ContactsLoadingPanel" Visibility="Visible">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="0,0,0,20"/>
                            <TextBlock Text="Loading contacts..." 
                                       HorizontalAlignment="Center" 
                                       Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"
                                       FontSize="16"/>
                        </StackPanel>
                    </Grid>

                    <!-- Contacts List -->
                    <ListBox x:Name="ContactsListBox" 
                             SelectionChanged="ContactSelected"
                             Visibility="Collapsed">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="12,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Contact Icon with Image Support -->
                                    <Grid Grid.Column="0" Width="60" Height="60" Margin="0,0,12,0">
                                        <!-- Contact Image Icon -->
                                        <Image Source="{Binding ChatIcon}" 
                                               Stretch="UniformToFill"
                                               Visibility="{Binding HasChatIcon, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                        <!-- Fallback Text Icon -->
                                        <Border Background="{Binding AccentColor}"
                                                CornerRadius="30"
                                                Visibility="{Binding HasChatIcon, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}">
                                            <TextBlock Text="{Binding IconText}"
                                                       Foreground="White"
                                                       FontSize="24"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       FontWeight="Bold"/>
                                        </Border>
                                    </Grid>

                                    <!-- Contact Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Title}" 
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="{Binding ForegroundColor}"/>
                                        <TextBlock Text="{Binding Status}" 
                                                   Foreground="{Binding SubtleTextColor}" 
                                                   TextWrapping="Wrap"
                                                   FontSize="14"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Empty State -->
                    <TextBlock x:Name="ContactsEmptyText" 
                               Text="No contacts yet"
                               Visibility="Collapsed"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"
                               FontSize="18"/>
                </Grid>
            </PivotItem>

        </Pivot>
    </Grid>



    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>


            <AppBarToggleButton
                x:Name="Settings"
                x:Uid="Settings"
                Click="Settings_Click"
                Icon="Setting"
                Label="settings"/>

            </CommandBar.PrimaryCommands>


            <!--CommandBar.SecondaryCommands>
                <AppBarButton
                    x:Name="AboutMe"
                    x:Uid="AboutMe"
                    Click="AboutApp_Click"
                    Icon="Contact"
                    Label="About"/>                
            </CommandBar.SecondaryCommands-->
        </CommandBar>
    </Page.BottomAppBar>



</Page>